{
  "name": "jewish-holidays",
  "version": "1.1.1",
  "description": "Jewish holidays",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shmulik-Kravitz/jewish-holidays.git"
  },
  "scripts": {
    "build": "yarn lint && tsup ./src/index.ts --dts --format esm,cjs",
    "test": "vitest --config ./config/vitest/vitest.config.ts  --coverage",
    "prepack": "yarn build",
    "lint": "yarn biome check",
    "lint-fix": "yarn biome check --fix",
    "api": "yarn api-extractor run --local --verbose"
  },
  "dependencies": {
    "jewish-date": "^2.0.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@microsoft/api-extractor": "^7.49.1",
    "@vitest/coverage-v8": "3.0.4",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "dependenciesMeta": {
    "@microsoft/api-extractor": {
      "unplugged": true
    },
    "@microsoft/api-extractor-model": {
      "unplugged": true
    },
    "jewish-date": {
      "unplugged": true
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "jewish",
    "holidays",
    "hebrew",
    "date",
    "luach",
    "calendar"
  ],
  "packageManager": "yarn@4.6.0"
}
